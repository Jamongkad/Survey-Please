<div class="row">
    <div class="col-md-5">
        <h3>I am in a room</h3>
        <div console-box id="scrollbar1">
            <div class="scrollbar">
                <div class="track">
                    <div class="thumb">
                        <div class="end"></div>
                    </div>
                </div>
            </div>
            <div class="viewport">
                <div class="overview">
                    <p ng-repeat="msg in msgs track by $index"> 
                        <console m="msg"></console>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <h3>Room</h3> 
        <!--
        <p><button class="btn" ng-click="look_at_door()">door</button></p>
        <p><button class="btn" ng-click="look_at_window()">window</button></p>
        -->        
        <p><button class="btn" ng-click="open('door')">door</button></p>
        <p><button class="btn" ng-click="open('window')">window</button></p>
    </div>

    <div class="col-md-3">
        <h3>Actions</h3> 
        <clicker d="actions"></clicker>
