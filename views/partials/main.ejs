<style>
    #element-to-pop { display:none }
</style>

<div class="col-md-3">
    <h3>I am in a room</h3>
    <p ng-repeat="msg in msgs track by $index"> 
        <console m="msg"></console>
    </p>
</div>

<div class="col-md-2">
    <h3>Room</h3> 
    <p><button class="btn" ng-click="look_at_door()">door</button></p>
    <p><button class="btn" ng-click="look_at_window()">window</button></p>
</div>

<div class="col-md-3">
    <h3>Actions</h3> 
    <p>  
        <button class="btn" ng-if="!hide_door" ng-click="open_door()">
            <span>open door {{door_attempts}}</span>
        </button>
    </p>
    <p><button class="btn" ng-click="scream()" ng-if="hide_scream">Scream for help.</button></p>
    <p><button class="btn" ng-click="why()" ng-hide="hide_why">What is this letter?</button></p>
    <p><button class="btn" ng-click="sleep()">sleep</button></p>
</div>

<div class="col-md-3">
    <h3>You</h3> 
    <p>Will: {{will}}</p>
    <p>Panic: {{panic}}</p>
    <p>Insanity: {{insanity}}</p>
    <p>Stamina: {{stamina}}</p>
</div>

<div id="element-to-pop"></div>


